<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinRoom">
    <ImageView
        android:id="@+id/logoreg"
        android:src="@drawable/edulogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:fontFamily="@font/montserrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/head"
        android:textStyle="bold"
        android:text="Join Room"
        android:layout_below="@+id/logoreg"
        android:layout_centerHorizontal="true"

        android:id="@+id/heading"
        />
    <TextView
        android:id="@+id/enter"
        android:layout_width="200dp"

        android:layout_marginTop="10dp"

        android:layout_height="wrap_content"
        android:text="Enter Room Code to Join"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"


        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enter_peuID"
android:padding="10dp"
android:background="@drawable/input"
        android:layout_below="@+id/heading"
        android:hint="Enter RoomID"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"

android:fontFamily="@font/montserrat"
        android:inputType="textEmailAddress"

        />
    <Button
        android:textColor="@color/white"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_peuID"
        android:text="Join"
        android:id="@+id/search"
        android:textAllCaps="false"
        android:padding="14dp"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/btn"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:textSize="20sp"

       />

</RelativeLayout>